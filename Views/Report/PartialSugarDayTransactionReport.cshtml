
@model IEnumerable<KnowledgeApp_Test.Models.Report.SugarWeekTransaction>
<div id="accordion">
    @{
        foreach (var item in Model.Select(a => a.UnitUnitName).Distinct())
        {
            <h3>Unit Id : @item</h3>
            <div>
                <table class="table table-bordered Report" id="ParemetertypeReport" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>Unit </th>
                            <th>Transaction Date</th>
                            <th>Opening</th>
                            <th>Production</th>
                            <th>Shifting In</th>
                            <th>Sales</th>
                            <th>Shifting Out</th>
                            <th>Torn Bag Count</th>
                            <th>Icumsa Value</th>
                            <th>Moisture Value</th>
                            <th>Line Replace Date</th>
                            <th>Closing</th>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Where(a => a.UnitUnitName.Equals(@item)))
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => i.UnitUnitName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.TransactionDate)
                                </td>
                                <td>@Html.DisplayFor(modelItem => i.Opening) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.Production)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => i.ShiftingIN)
                                </td>
                                <td>@Html.DisplayFor(modelItem => i.Sales)</td>

                                <td>@Html.DisplayFor(modelItem => i.ShiftingOut)</td>
                                <td>@Html.DisplayFor(modelItem => i.TornBagCount)</td>
                                <td>@Html.DisplayFor(modelItem => i.ICUMSAValue)</td>
                                <td>@Html.DisplayFor(modelItem => i.MoistureValue)</td>
                                <td>@Html.DisplayFor(modelItem => i.LineReplaceDate)</td>
                                <td>@Html.DisplayFor(modelItem => i.Opening) </td>

                            </tr>

                        }
                    </tbody>
                    <tfoot>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.Report').DataTable({
            dom: 'Blfrtip',
            buttons: [
                'excel', 'pdf', 'print'
            ]
        });
    });
    $(function () {
        $("#accordion").accordion({
            heightStyle: "content"

        });
    });
</script>