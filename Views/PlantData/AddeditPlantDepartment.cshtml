@model KnowledgeApp_Test.Models.PlantData.PlantDepartment
@using KnowledgeApp_Test.Models.Administration
@using KnowledgeApp_Test.Services
@{
    Layout = null;
    ViewBag.Title = "Plant Department";
    GeneralServices GS = new GeneralServices();
    List<RolePermisssion> right = GS.ValidateForm(@ViewBag.Title);

}

else if (right[0].BtnAdd == true || right[0].btnEdit == true)
{
    using (Html.BeginForm("AddeditPlantDepartment", "PlantData", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        <div class="row">
            <div class="col-md-4">
                Old Code
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.HiddenFor(m => m.PlantDepartmentId)
                    @Html.TextBoxFor(m => m.OldCode, new { @class = "form-control Tint", @onkeypress = "javascript:return isNumber(event)", @required = "required" })
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                Department Name
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", @maxlength = "20" })
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                Short Name
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control", @maxlength = "3" })
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                Department Code
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.DepartmentCode, new { @class = "form-control", @maxlength = "5" })
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-md-2">
                @if (Model.PlantDepartmentId == 0 && right[0].BtnAdd==true)
                {
                    <button class="form-control bg-success">Save</button>
                }
                else if(right[0].btnEdit==true)
                {
                    <button class="form-control bg-info">Update</button>
                }


            </div>

        </div>
    }
}
    <script type="text/javascript">
        $(document).ready(function () {

            $(".ddl").select2({
                placeholder: "select Option",
                allowClear: true,
                theme: "classic"
            });
            if ($("#OldCode").val() == 0) {
                $("#OldCode").val('');
            }

        });
    </script>

