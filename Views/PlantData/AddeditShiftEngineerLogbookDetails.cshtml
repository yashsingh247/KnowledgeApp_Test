@model KnowledgeApp_Test.Models.PlantData.ShiftEngineerLogbookDetails
@using KnowledgeApp_Test.Models.Administration
@using KnowledgeApp_Test.Services
@{
    Layout = null;
    var SId = ViewBag.ShiftLogBookDetail;
    GeneralServices GS = new GeneralServices();
    List<RolePermisssion> right = GS.ValidateForm(@ViewBag.Title);
}
@if (right[0].BtnAdd == true || right[0].btnEdit==true)
{
    using (Html.BeginForm("AddeditShiftEngineerLogbookDetails", "PlantData", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        <div class="row">
            <div class="col-md-4">
                SerialNo
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.HiddenFor(m => m.DetailsId)
                    @Html.HiddenFor(m => m.EngineerLogbookId, new { @Value = SId })
                    @Html.TextBoxFor(m => m.SerialNo, new { @class = "form-control", @required = "required", @onkeypress = "javascript:return isNumber(event)" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                Observations
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Observations, new { @class = "form-control", @maxlength = "500" })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                WorkDone
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.WorkDone, new { @class = "form-control", @maxlength = "500" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                WorkDone
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.WorkToBeDone, new { @class = "form-control", @maxlength = "500" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                Remarks
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", @maxlength = "500" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @if (Model.DetailsId == 0 && right[0].BtnAdd == true)
                {
                    <button class="form-control bg-success">Save</button>
                }
                else if(right[0].btnEdit == true)
                {
                    <button class="form-control bg-success">Update</button>
                }



            </div>
        </div>

    }
}

    <script type="text/javascript">
        $(document).ready(function () {

            $(".ddl").select2({
                placeholder: "select Option",
                allowClear: true,
                theme: "classic"
            });
            if ($("#SerialNo").val() == 0) {
                $("#SerialNo").val('');
            }

        });
    </script>
