@model IEnumerable<KnowledgeApp_Test.Models.Stoppages.DailyStoppageReport>
<div id="accordion">
    @{
        foreach (var item in Model.Select(a => a.StoppageTypeName).Distinct())
        {
            <h3>StoppageTypeName : @item</h3>
            <div>
                <table class="table table-bordered" id="ParemetertypeReport" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                From
                            </th>
                            <th>
                                Till
                            </th>

                            <th>
                                Duration
                            </th>
                            <th>
                                StationName
                            </th>
                            <th>
                                Remarks
                            </th>
                            <th>
                                StoppageTypeName
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Where(a => a.StoppageTypeName.Equals(@item)))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => i.From)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.Till)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.Duration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.StationName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.Remarks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.StoppageTypeName)
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('.Report').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excel', 'pdf', 'print'
            ]
        });
    });
    $(function () {
        $("#accordion").accordion({
            heightStyle: "content"

        });
    });


</script>
