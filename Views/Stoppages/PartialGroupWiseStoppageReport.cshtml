@model IEnumerable<KnowledgeApp_Test.Models.Stoppages.GroupWiseStoppageReport>
<div id="accordion">
    @{
        foreach (var item in Model.Select(a => a.StationName).Distinct())
        {
            <h3>StationName : @item</h3>
            <div>
                <table class="table table-bordered" id="ParemetertypeReport" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                StationName
                            </th>
                            <th>
                                StoppageDate
                            </th>

                            <th>
                                StoppageStart
                            </th>
                            <th>
                                StoppageTill
                            </th>
                            <th>
                                Duration Minutes
                            </th>

                            <th>
                                Duration
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Where(a => a.StationName.Equals(@item)))
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => i.StationName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.StoppageDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.StationId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.StoppageDate2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.DurationInMinutes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.Duration)
                            </td>


                        </tr>
                        }
                    </tbody>
                    <tfoot>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    }
</div>
<script type="text/javascript">
    $(function () {
        $("#accordion").accordion({
            heightStyle: "content"

        });
    });
</script>
